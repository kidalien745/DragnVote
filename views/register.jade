extends layout

block content
  div.container.main-container
    form.form-signin(action="/register", method="post")
      h2.form-signin-heading Please choose a password
      h3 Voter ID: #{voterId}
      input#inputVoterID.form-control(type="hidden", name="voterId", value="#{voterId}", required)
      label.sr-only(for="inputPassword") Password
      input#inputPassword.form-control(type="password", placeholder="Pasword", name="password", required)
      button.btn.btn-lg.btn-primary.btn-block(type="submit") Submit
  div.footer
